    @*查询页面*@
    <div class="container">
        <div class="row">
            <div style="margin-left:30%;margin-top:5%;mari">
                <form>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">请输入您的病例编号或身份证号：</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="button" class="btn btn-default" id="btnsearch">查询</button>

                        </div>
                    </div>
                </form>
            </div>
       </div>
    </div>
    @*结果*@
    <div class="container" id="result">
        <div class="row">
            @*查询信息在此显示*@
            <div style="margin-top:5%;margin-left:10%">
                <img src="~/pic/Record.png" class="img" />
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")

        <script>
            $("#result").hide();
        </script>
        <script type="text/javascript">
                            $("#btnsearch").click(function () {
                                $("#result").toggle();
                            })
        </script>